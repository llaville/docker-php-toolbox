{
    "name": "bartlett/docker-php-toolbox",
    "description": "Helper to discover and install PHP extensions and/or tools",
    "keywords": ["php", "pecl-extensions", "tools"],
    "type": "project",
    "require": {
        "php": "^7.4 ||  ^8.0",
        "ext-json": "*",
        "composer-runtime-api": "^2.0",
        "doctrine/collections": "^1.6.5",
        "symfony/config": "^5.4",
        "symfony/console": "^5.4",
        "symfony/dependency-injection": "^5.4",
        "symfony/event-dispatcher": "^5.4",
        "symfony/finder": "^5.4",
        "symfony/process": "^5.4",
        "symfony/stopwatch": "^5.4"
    },
    "bin": ["bin/toolkit.php", "bin/devkit.php"],
    "autoload": {
        "psr-4": {
            "Bartlett\\PHPToolbox\\": "src"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Laurent Laville",
            "homepage": "https://github.com/llaville",
            "role": "Lead"
        }
    ],
    "prefer-stable": true,
    "config": {
        "platform": {
            "php": "7.4.0"
        },
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
