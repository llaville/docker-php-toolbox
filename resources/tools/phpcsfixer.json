{
    "tools": [
        {
            "name": "PHP-CS-Fixer 3",
            "summary": "PHP Coding Standards Fixer (3.x versions)",
            "website": "https://github.com/FriendsOfPHP/PHP-CS-Fixer",
            "command": {
                "phar-download": {
                    "phar": "https://github.com/FriendsOfPHP/PHP-CS-Fixer/releases/latest/download/php-cs-fixer.phar",
                    "bin": "%target-dir%/php-cs-fixer-3"
                },
                "shell": {
                    "cmd": "ln -sf %target-dir%/php-cs-fixer-3 %target-dir%/php-cs-fixer"
                }
            },
            "tags": [
                "php-cs-fixer-3",
                "exclude-php:5.6",
                "exclude-php:7.0",
                "exclude-php:7.1",
                "exclude-php:7.2",
                "exclude-php:7.3"
            ]
        }
    ]
}
