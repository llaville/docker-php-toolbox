{
    "tools": [
        {
            "name": "phplint v3",
            "summary": "Checks PHP file syntax",
            "website": "https://github.com/overtrue/phplint",
            "command": {
                "git-install": {
                    "repository": "https://github.com/overtrue/phplint.git",
                    "target-dir": "/usr/local/src/phplint",
                    "version": "8.0"
                },
                "composer-install": {},
                "shell": {
                    "cmd": "ln -sf /usr/local/src/phplint/bin/phplint %target-dir%/phplint"
                }
            },
            "tags": [
                "phplint-3",
                "exclude-php:5.2",
                "exclude-php:5.3",
                "exclude-php:5.4",
                "exclude-php:5.5",
                "exclude-php:5.6",
                "exclude-php:7.0",
                "exclude-php:7.1",
                "exclude-php:7.2",
                "exclude-php:7.3",
                "exclude-php:7.4"
            ]
        }
    ]
}
