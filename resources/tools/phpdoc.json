{
    "tools": [
        {
            "name": "phpdoc",
            "summary": "Documentation Generator for PHP",
            "website": "https://github.com/phpdocumentor/phpdocumentor",
            "command": {
                "phar-download": {
                    "phar": "https://github.com/phpdocumentor/phpdocumentor/releases/latest/download/phpDocumentor.phar",
                    "bin": "%target-dir%/phpdoc"
                }
            },
            "tags": [
                "exclude-php:5.6",
                "exclude-php:7.0",
                "exclude-php:7.1"
            ]
        }
    ]
}
