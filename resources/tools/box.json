{
    "tools": [
        {
            "name": "box",
            "summary": "Fast, zero config application bundler with PHARs",
            "website": "https://github.com/box-project/box",
            "command": {
                "phar-download": {
                    "phar": "https://github.com/box-project/box/releases/latest/download/box.phar",
                    "bin": "%target-dir%/box"
                }
            }
        },
        {
            "name": "box-manifest v2",
            "summary": "Create a manifest to a PHP Archive (PHAR) for the BOX project",
            "website": "https://github.com/llaville/box-manifest",
            "command": {
                "git-install": {
                    "repository": "https://github.com/llaville/box-manifest.git",
                    "target-dir": "/usr/local/src/box"
                },
                "composer-install": {},
                "shell": {
                    "cmd": "ln -sf /usr/local/src/box/bin/box %target-dir%/box-manifest"
                }
            },
            "tags": [
                "exclude-php:5.2",
                "exclude-php:5.3",
                "exclude-php:5.4",
                "exclude-php:5.5",
                "exclude-php:5.6",
                "exclude-php:7.0",
                "exclude-php:7.1",
                "exclude-php:7.2",
                "exclude-php:7.3",
                "exclude-php:7.4",
                "exclude-php:8.0"
            ]
        }
    ]
}
