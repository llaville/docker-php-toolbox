{
    "tools": [
        {
            "name": "psalm 5",
            "summary": "Finds errors in PHP applications (5.x version)",
            "website": "https://github.com/vimeo/psalm",
            "command": {
                "phar-download": {
                    "phar": "https://github.com/vimeo/psalm/releases/latest/download/psalm.phar",
                    "bin": "%target-dir%/psalm"
                }
            },
            "priority": 52,
            "tags": [
                "exclude-php:5.6",
                "exclude-php:7.0",
                "exclude-php:7.1",
                "exclude-php:7.2",
                "exclude-php:7.3",
                "exclude-php:8.4"
            ]
        }
    ]
}
