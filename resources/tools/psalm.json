                "phar-download": {
                    "phar": "https://github.com/vimeo/psalm/releases/latest/download/psalm.phar",
                    "bin": "%target-dir%/psalm"
                }
            },
            "tags": [
                "exclude-php:5.2",
                "exclude-php:5.3",
                "exclude-php:5.4",
                "exclude-php:5.5",
                "exclude-php:5.6",
                "exclude-php:7.0",
                "exclude-php:7.1",
                "exclude-php:7.2",
                "exclude-php:7.3"
            ]
        }
    ]
}
